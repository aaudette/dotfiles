{
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true
    },
    "editor.minimap.enabled": false,
    "editor.fontFamily": "Hack, monospace",
    "editor.rulers": [100],
    "explorer.autoReveal": false,
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/*.js.map": true,
        "**/*.js": {"when": "$(basename).ts"},
        "**/*.css": {"when": "$(basename).scss"}
    },
    "files.trimTrailingWhitespace": true
}